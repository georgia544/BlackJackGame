<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon">

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cards_bot_conteiner"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cards_bot_conteiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/button_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_sum_cards_bot"/>
    <TextView
        android:id="@+id/text_sum_cards_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cards_bot_conteiner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_check"/>
    <TextView
        android:id="@+id/text_sum_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="SUM:"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textSize="16sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/text_sum_cards_bot"
        app:layout_constraintTop_toTopOf="@+id/text_sum_cards_bot"
        app:layout_constraintBottom_toBottomOf="@+id/text_sum_cards_bot"/>
    <Button
        android:id="@+id/button_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sum_cards_bot"
        app:layout_constraintBottom_toTopOf="@+id/text_sum_player"/>
    <TextView
        android:id="@+id/text_sum_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_check"
        app:layout_constraintBottom_toBottomOf="@+id/text_card_player"/>
    <TextView
        android:id="@+id/text_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text="SUM:"
        android:textSize="16sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/text_sum_player"
        app:layout_constraintEnd_toStartOf="@+id/text_sum_player"
        app:layout_constraintBottom_toBottomOf="@+id/text_sum_player"/>
    <TextView
        android:id="@+id/text_card_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text=""
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/text_sum_player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_take_a_card"/>
    <Button
        android:id="@+id/button_take_a_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take a card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_card_player"
        app:layout_constraintBottom_toTopOf="@+id/text_wins"/>
    <TextView
        android:id="@+id/wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text="WIN:"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/text_wins"
        app:layout_constraintEnd_toStartOf="@+id/text_wins"
        app:layout_constraintBottom_toBottomOf="@+id/text_wins"/>
    <TextView
        android:id="@+id/text_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_take_a_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_statistics"/>

    <TextView
        android:id="@+id/text_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_variablefont_wght"
        android:textColor="@color/black"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_wins"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>